  }">

<input type=button value="but-" onclick="{
 my02()
  }">

<input type=button value="how many times have i done it" onclick="{
 document.all.myArea01.value = ''
  for ( x = 1; x <= 3; x++){
   document.all.myArea01.value += x + ', '
    }
 
     }">




<input type=button value="decisions" onclick="{
 x = 9
  if (x == 9){
   document.all.myArea01.value = 'nice'
    } else {
     document.myArea01.value = 'god'
     }
      }">

<input type=button value="arrays" onclick="{
 myMax = 3
  myArray = new Array(myMax)
   myArray[1] = 'hm1'
    myArray[2] = 'hm2'
     myArray[3] = 'hm3 '
      document.all.myArea01.value = myArray[3] + ''
       for ( x = 1; x <= 3; x++){
        document.all.myArea01.value += myArray[x] + ' '

